<% layout('boilerplate') -%>

    <body>
        <main class="w-full h-[80vh] flex justify-center items-center mt-4">
            <div style="width: 500px; box-shadow: 0 4px 14px 5px gray; border-radius: 10px;">
                <img src="<%= data.image %>" style="border-radius: 10px 10px 0 0;" width="100%" height="180" />
                <div class="p-4">
                    <h3><a href="/listings/<%=data._id %>" class="text-lg font-semibold">
                            <%=data.title %>
                        </a> |<span class="text-blue-800 font-semibold">  &#8377;<%=data.price.toLocaleString("en-IN") %> </span> </h3>
                    <h3>Location: <%=data.location %> | Country: <%=data.country %>
                    </h3>
                    <p class="text-gray-600 my-4">
                        <%=data.description %>
                    </p>
                    <button><a href="/listings/<%=data._id %>/edit" class="px-4 py-1 bg-green-500 text-white font-semibold rounded-md ">Edit Listing</a></button>
                    <form method="post" action="/listings/<%=data._id%>?_method=DELETE" class="relative">
                        <button class="px-4 py-1 bg-red-500 text-white font-semibold rounded-md absolute right-0 bottom-[-5px]">delete</button>
                    </form>
                </div>
            </div>
        </main>
    </body>